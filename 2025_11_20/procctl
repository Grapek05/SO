#!/bin/bash

while true; do
    clear
    echo "Process Control:"
    echo "1) List top 5 processes by CPU usage"
    echo "2) List top 5 processes by memory usage"
    echo "3) Show process tree"
    echo "4) Show process name by PID"
    echo "5) Show process PID(s) by name"
    echo "6) Kill process by PID"
    echo "7) Kill process by name"
    echo "q) Exit"
    echo -n "Choice: "
    read choice

    case "$choice" in

    1)
        echo "Top 5 by CPU:"
        ps aux --sort=-%cpu | head -n 6
        read -p "Press enter..."
        ;;

    2)
        echo "Top 5 by memory:"
        ps aux --sort=-%mem | head -n 6
        read -p "Press enter..."
        ;;

    3)
        pstree -p
        read -p "Press enter..."
        ;;

    4)
        echo -n "PID: "
        read pid
        ps -p "$pid" -o comm=
        read -p "Press enter..."
        ;;

    5)
        echo -n "Process name: "
        read name
        pgrep "$name"
        read -p "Press enter..."
        ;;

    6)
        echo -n "PID to kill: "
        read pid
        kill "$pid" 2>/dev/null && echo "Killed." || echo "Error."
        read -p "Press enter..."
        ;;

    7)
        echo -n "Process name to kill: "
        read name
        pkill "$name" 2>/dev/null && echo "Killed." || echo "Error."
        read -p "Press enter..."
        ;;

    q|Q)
        exit 0
        ;;

    *)
        echo "Invalid option."
        read -p "Press enter..."
        ;;
    esac
done

